@model Practica20250411.AppMVCCore.Models.Marca

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-light">Delete</h1>

<h3 class="text-light">Esta seguro de eliminar este registro?</h3>
<div>
    <h4 class="text-light">Marca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.ImagenBytes)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ImagenBytes != null && Model.ImagenBytes.Length > 0)
            {
                string base64Image = Convert.ToBase64String(Model.ImagenBytes);
                string imageUrl = $"data:image/png;base64,{base64Image}";
                <img src="@imageUrl" alt="Imagen" style="max-width: 75px; max-height: 200px;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>
</div>
