@model Practica20250411.AppMVCCore.Models.Usuario

@{
    ViewData["Title"] = "ChancePassword";
}

<h1 class="text-light">Cambiar Contraseña</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChancePassword class=" text-light"">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label text-light"></label>
                <input asp-for="Nombre" disabled class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label text-light">contraseña actual</label>
                <input name="PasswordAnt" type="password" required class="form-control" />             
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label text-light">Nueva contraseña</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row mt-3">
            <div class="form-group">
                    <input type="submit" value="Cambiar contraseña" class="btn btn-primary text-light " />
                <a asp-action="Index" class="btn btn-info">Cancelar</a>
            </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
