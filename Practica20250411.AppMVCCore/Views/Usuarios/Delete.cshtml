@model Practica20250411.AppMVCCore.Models.Usuario

@{
    ViewData["Title"] = "Eliminar";
}
<h1>Eliminar</h1>

<h3 class="text-light">Esta seguro de eliminar este registro?</h3>
<div>
    <h4 class="text-light">Usuario</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>
</div>
