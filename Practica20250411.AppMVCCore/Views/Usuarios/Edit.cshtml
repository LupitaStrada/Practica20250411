@model Practica20250411.AppMVCCore.Models.Usuario

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-light">Editar</h1>

<h4 class="text-light">Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="text-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label text-light"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-light"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
            <div class="form-group">
            <label asp-for="Rol" class="control-label text-light"></label>
                <select asp-for="Rol" class="form-control">
                <option value="ADMINISTRADOR" class="form-control">ADMINISTRADOR</option>
                <option value="OPERARIO">OPERARIO</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>

    </div>
     <div class="row mt-3">
            <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
              </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
