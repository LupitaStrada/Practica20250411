	ViewData["Title"] = "Details";
}

<h1 class="text-light">Details</h1>

<div>
	<h4 class="text-light">Producto</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2 text-light">
			@Html.DisplayNameFor(model => model.Nombre)
		</dt>
		<dd class="col-sm-10 text-light">
			@Html.DisplayFor(model => model.Nombre)
		</dd>
		<dt class="col-sm-2 text-light">
			@Html.DisplayNameFor(model => model.Descripcion)
		</dt>
		<dd class="col-sm-10 text-light">
			@Html.DisplayFor(model => model.Descripcion)
		</dd>
		<dt class="col-sm-2 text-light">
			@Html.DisplayNameFor(model => model.Precio)
		</dt>
		<dd class="col-sm-10 text-light">
			@Html.DisplayFor(model => model.Precio)
		</dd>
		<dt class="col-sm-2 text-light">
			@Html.DisplayNameFor(model => model.Notas)
		</dt>
		<dd class="col-sm-10 text-light">
			@Html.DisplayFor(model => model.Notas)
		</dd>
		<dt class="col-sm-2 text-light">
			@Html.DisplayNameFor(model => model.Bodega)
